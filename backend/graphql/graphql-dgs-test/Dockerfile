FROM openjdk:8u121-jre-alpine

VOLUME /tmp

ARG JASYPT_ENCRYPTOR_PASSWORD=""
ARG SLS_ACCESS_ID=""
ARG SLS_ACCESS_SECRET=""


ADD target/**.jar app.jar
RUN sh -c 'touch /app.jar'
ENV JAVA_OPTS=""
EXPOSE 8080
ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -Djava.security.egd=file:/dev/./urandom -DCOMMON_SERVICE_IP=${COMMON_SERVICE_IP} -DSLS_ACCESS_ID=${SLS_ACCESS_ID} -DSLS_ACCESS_SECRET=${SLS_ACCESS_SECRET} -DJASYPT_ENCRYPTOR_PASSWORD=${JASYPT_ENCRYPTOR_PASSWORD} -jar /app.jar"]
